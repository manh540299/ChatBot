<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.chatbotai.aichataiart.view.activity.LanguageActivity">

        <ImageView
            android:id="@+id/btnBack"
            style="@style/ButtonBackToolBar" />

        <TextView
            style="@style/Inter_Semi_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="@string/language"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintLeft_toRightOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlLanguage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/margin_default_app"
            android:layout_marginEnd="20dp"
            android:clipToPadding="false"
            android:paddingTop="@dimen/margin_item"
            android:paddingBottom="@dimen/margin_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>