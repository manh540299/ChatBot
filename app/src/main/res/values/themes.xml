<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenChatBot" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Inter-Regular.ttf</item>
        <item name="android:textColor">@color/black_main</item>
    </style>

    <style name="Inter_Semi_Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Inter-SemiBold.ttf</item>
    </style>

    <style name="Inter_ExtraBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Inter-ExtraBold.otf</item>
    </style>

    <style name="Inter_Medium" parent="android:TextAppearance">
        <item name="fontPath">fonts/Inter-Medium.ttf</item>
    </style>

    <style name="Inter_Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Inter-Bold.ttf</item>
    </style>

    <attr name="fontPath" format="string" />

    <style name="ViewLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@drawable/bg_line</item>
    </style>

    <style name="TextViewButtonDefault" parent="Inter_Semi_Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">26dp</item>
        <item name="android:paddingEnd">26dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/ripple_button_only_text_view</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:layout_width">@dimen/size_button_normal</item>
        <item name="android:layout_height">@dimen/size_button_normal</item>
        <item name="android:padding">@dimen/padding_button_normal</item>
        <item name="android:background">@drawable/ripple_button_normal_circle</item>
    </style>

    <style name="ButtonBackToolBar" parent="ButtonDefault">
        <item name="android:layout_marginTop">@dimen/margin_toolbar_top</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="srcCompat">@drawable/ic_more</item>
        <item name="android:scaleX">-1</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>

    <style name="TextComponentToolBar" parent="Inter_Semi_Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_main</item>
    </style>

    <style name="TextBenefit" parent="Inter_Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="MessageConversation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">@dimen/margin_default_app</item>
        <item name="android:paddingEnd">@dimen/margin_default_app</item>
        <item name="android:layout_marginTop">@dimen/margin_default_app</item>
    </style>

    <style name="BottomButtonComponent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:background">@drawable/ripple_button_normal</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>


    <style name="SearchDefault">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_item</item>
        <item name="android:paddingBottom">@dimen/margin_item</item>
        <item name="android:layout_marginStart">@dimen/margin_item</item>
        <item name="android:layout_marginTop">@dimen/margin_default_app</item>
        <item name="android:background">@drawable/bg_edit_text_search</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:drawablePadding">@dimen/margin_default_app</item>
        <item name="android:gravity">center|start</item>
        <item name="android:imeOptions">actionNone</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:paddingStart">@dimen/margin_item</item>
        <item name="android:paddingEnd">@dimen/margin_item</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:textColorHint">@color/text_dark</item>
        <item name="android:textCursorDrawable">@drawable/divider_edit_text_search</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLength">200</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SearchConversation" parent="SearchDefault">
        <item name="android:paddingEnd">36dp</item>
    </style>

    <style name="EditTextChat" parent="SearchDefault">
        <item name="android:layout_marginEnd">@dimen/margin_default_app</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="ImageBorder">
        <item name="cornerSize">20dp</item>
    </style>


    <style name="ButtonMenu" parent="Inter_Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:paddingStart">@dimen/margin_item</item>
        <item name="android:paddingEnd">@dimen/margin_main</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:elevation">9dp</item>
        <item name="android:textColor">@color/black_main</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/ripple_language</item>
        <item name="android:drawablePadding">@dimen/margin_default_app</item>
    </style>

</resources>